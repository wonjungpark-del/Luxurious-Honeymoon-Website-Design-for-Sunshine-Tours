{
  "buildCommand": "echo 'Static site - no build needed'",
  "outputDirectory": "public",
  "cleanUrls": true,
  "trailingSlash": false,
  "redirects": [
    {
      "source": "/thailand-khao-lak",
      "destination": "/thailand-khao-lak.html"
    },
    {
      "source": "/thailand-phuket",
      "destination": "/thailand-phuket.html"
    },
    {
      "source": "/thailand-krabi",
      "destination": "/thailand-krabi.html"
    },
    {
      "source": "/thailand-koh-samui",
      "destination": "/thailand-koh-samui.html"
    },
    {
      "source": "/thailand-pattaya",
      "destination": "/thailand-pattaya.html"
    },
    {
      "source": "/thailand-hua-hin",
      "destination": "/thailand-hua-hin.html"
    },
    {
      "source": "/maui",
      "destination": "/maui.html"
    },
    {
      "source": "/bigisland",
      "destination": "/bigisland.html"
    },
    {
      "source": "/oahu",
      "destination": "/oahu.html"
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    }
  ],
  "functions": {
    "api/**/*.js": {
      "runtime": "nodejs18.x"
    }
  }
}
