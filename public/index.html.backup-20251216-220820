    <script src="/static/js/main.js"></script>
    
    <script>
        // Load approved reviews
        async function loadReviews() {
            try {
                const response = await fetch('/api/reviews?status=approved');
                const result = await response.json();
                
                if (result.success && result.data.length > 0) {
                    const reviews = result.data;
                    
                    // Update subtitle with count
                    document.getElementById('reviews-subtitle').textContent = 
                        `ì„ ìƒ¤ì¸íˆ¬ì–´ì™€ í•¨ê»˜í•œ í–‰ë³µí•œ ìˆœê°„ë“¤ (ì´ ${reviews.length}ê°œì˜ í›„ê¸°)`;
                    
                    // Show only first 6 reviews (or featured reviews)
                    const displayReviews = reviews
                        .sort((a, b) => b.is_featured - a.is_featured)
                        .slice(0, 6);
                    
                    const container = document.getElementById('reviews-container');
                    container.innerHTML = `
                        <div class="reviews-grid">
                            ${displayReviews.map(review => {
                                const stars = 'â­'.repeat(review.rating);
                                const date = new Date(review.created_at).toLocaleDateString('ko-KR', {
                                    year: 'numeric',
                                    month: 'long',
                                    day: 'numeric'
                                });
                                
                                return `
                                    <div class="review-card ${review.is_featured ? 'featured' : ''}">
                                        ${review.image_url ? `<img src="${review.image_url}" alt="${review.title}" class="review-image">` : ''}
                                        <span class="review-destination">${review.destination_kr || review.destination}</span>
                                        ${review.is_featured ? '<span class="review-destination" style="background: #ffd700; color: #000; margin-left: 0.5rem;">â­ ì¶”ì²œ</span>' : ''}
                                        <h3 class="review-title">${review.title}</h3>
                                        <div class="review-header">
                                            <span class="review-author">${review.author_name}</span>
                                            <span class="review-rating">${stars}</span>
                                        </div>
                                        <p class="review-content">${review.content}</p>
                                        <p class="review-date">ì—¬í–‰ì¼: ${review.travel_date || '-'} | ì‘ì„±ì¼: ${date}</p>
                                    </div>
                                `;
                            }).join('')}
                        </div>
                    `;
                } else {
                    // No reviews yet
                    document.getElementById('reviews-container').innerHTML = `
                        <div style="text-align: center; padding: 3rem 0;">
                            <i class="fas fa-comments" style="font-size: 4rem; color: #ddd; margin-bottom: 1rem;"></i>
                            <p style="color: #95a5a6; font-size: 1.1rem;">ì•„ì§ ë“±ë¡ëœ í›„ê¸°ê°€ ì—†ìŠµë‹ˆë‹¤.</p>
                            <p style="color: #95a5a6;">ì²« ë²ˆì§¸ í›„ê¸°ë¥¼ ë‚¨ê²¨ì£¼ì„¸ìš”!</p>
                        </div>
                    `;
                    document.getElementById('reviews-subtitle').textContent = 
                        'ì„ ìƒ¤ì¸íˆ¬ì–´ì™€ í•¨ê»˜í•œ í–‰ë³µí•œ ìˆœê°„ë“¤ (ì´ 0ê°œì˜ í›„ê¸°)';
                }
            } catch (error) {
                console.error('Error loading reviews:', error);
                document.getElementById('reviews-container').innerHTML = `
                    <div style="text-align: center; padding: 3rem 0;">
                        <i class="fas fa-exclamation-circle" style="font-size: 4rem; color: #e74c3c; margin-bottom: 1rem;"></i>
                        <p style="color: #e74c3c;">í›„ê¸°ë¥¼ ë¶ˆëŸ¬ì˜¤ëŠ”ë° ì‹¤íŒ¨í–ˆìŠµë‹ˆë‹¤.</p>
                    </div>
                `;
            }
        }
        
        // Load reviews when page loads
        document.addEventListener('DOMContentLoaded', loadReviews);
    </script>
